@model IEnumerable<Vidly.Models.Customers>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{
    @Html.ActionLink("New Customer","new","Customers",null, new { @class = "btn btn-primary"});

    <table class="table table-­bordered table‐hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>View Customer</th>
                <th>Edit Customer</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="active">
                <td>@item.customerId </td>
                <td>@Html.ActionLink(item.customerName, "Details/" + item.customerId) </td>
                <td>@Html.ActionLink(item.customerName, "Edit", "Customers", new { id = item.customerId }, null)</td>
                <td>@item.membershipType.name</td>
                <td>@item.membershipType.DiscountRate%</td>

                @*, "Customers", new { custId = @item.customerId },null)*@
            </tr>
            }

        </tbody>

    </table>
}


